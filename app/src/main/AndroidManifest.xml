<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.edu.ifsp.scl.listpad">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_tobuy_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_tobuy_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ListPad">
        <activity
            android:name=".activity.DetalheActivity"
            android:exported="false" />
        <activity
            android:name=".activity.CadastroItemsActivity"
            android:exported="false" />
        <activity
            android:name=".activity.CadastroActivity"
            android:exported="false" />
        <activity
            android:name=".activity.MainActivity"
            android:exported="true" />
        <activity
            android:name=".activity.SplashScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>